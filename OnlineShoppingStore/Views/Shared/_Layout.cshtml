<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/MyMainLayOut.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/prevstyle.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
 
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">

                

                <div class="logo">
                   
                    <h1><a href="#">My <span>Shop</span></a></h1>

                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="account">
                   <ul>
                       <li>
                           <div class="hidden-xs">
                               <h4><a>Call</a></h4>
                               <p>018##-######</p>
                           </div>

                           <div class="visible-xs">
                              
                               <p>018##-######</p>
                           </div>
                          
                       </li>
                   </ul>
                </div>
            </div> 
            </div>
            <div class="row">

                <div class="col-md-12">
                    <div class="nav-menus">
                       
                        <ul class="nav nav-pills">
                            <li class="active"><a style="border-radius:initial;" href="/Home/Index">Home</a></li>
                            <li><a style="border-radius:initial;" href="#">Location</a></li>
                            <li><a style="border-radius:initial;" href="#">About</a></li>
                            <li><a style="border-radius:initial;" href="../Home/Login">Login</a></li>
                            <li><a style="border-radius:initial;" href="../Home/regform">Sign Up</a></li>

                            <li><a style="border-radius:initial;" href="../Home/Addtocartedit">Add to Cart</a></li>
                            @if (Session["loged_in_customer"] != null)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <ul class="nav navbar-nav navbar-right">

                                        <li>@Session["loged_in_customer"]</li>

                                        <li>
                                            @Html.ActionLink("log out", "logout", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
                                        </li>
                                    </ul>
                                }
                            }
                        </ul>
                    </div>
                </div>

            </div>
          
        
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12 copyright">
                    
                    <div class="col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - OnlineShopingStore. All right reserved.</p>
                    </div> 

                    <div class="col-md-6 col-sm-6 copyright-right">
                       
                        <ul class="list-unstyled list-social">
                            <li><a href="#" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                           
                        </ul>
                    </div> 
                </div>
            </div>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
